<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Background"

    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbarStyle="insideInset">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="17sp">


            <Space
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_below="@+id/tbsun"

                android:layout_marginTop="0dp" />

            <TextView
                android:id="@+id/textTab1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"

                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:text="Week:"
                android:textSize="30sp" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="wrap_content"
                android:layout_height="40dp"

                android:layout_alignTop="@+id/textTab1"
                android:layout_marginStart="30sp"
                android:layout_marginTop="0dp"
                android:layout_toEndOf="@+id/textTab1"
                android:background="#ffff"
                tools:listitem="@layout/support_simple_spinner_dropdown_item" />

            <Button
                android:id="@+id/button"
                android:layout_width="131dp"
                android:layout_height="80dp"
                android:layout_below="@+id/tbsat"
                android:layout_alignStart="@+id/tbsat"
                android:layout_alignEnd="@+id/TVtue"
                android:layout_alignBottom="@+id/tbsun"
                android:layout_marginStart="0dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="17dp"
                android:text="Submit" />

            //Monday

            <TextView
                android:id="@+id/TVmon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textTab1"
                android:layout_alignStart="@+id/textTab1"
                android:layout_marginStart="0dp"
                android:layout_marginTop="20dp"
                android:text="Monday"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tvpmon"
                android:layout_width="@dimen/Toggle_Button_Width"
                android:layout_height="wrap_content"
                android:layout_below="@+id/TVmon"
                android:layout_alignStart="@+id/TVmon"
                android:layout_marginStart="0dp"
                android:gravity="center"
                android:text="In"
                android:textSize="22sp" />

            <ToggleButton
                android:id="@+id/tbmon"
                android:layout_width="@dimen/Toggle_Button_Width"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvpmon"
                android:layout_alignStart="@+id/TVmon"
                android:checked="false"
                android:textOff="@string/Off"
                android:textOn="@string/On" />


            //Tuesday

            <TextView
                android:id="@+id/TVtue"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/TVmon"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="0dp"
                android:text="Tuesday"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tvptue"
                android:layout_width="@dimen/Toggle_Button_Width"
                android:layout_height="wrap_content"
                android:layout_below="@+id/TVtue"
                android:layout_alignEnd="@+id/TVtue"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:gravity="center"
                android:text="In"
                android:textSize="22sp" />

            <ToggleButton
                android:id="@+id/tbtue"
                android:layout_width="@dimen/Toggle_Button_Width"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvptue"
                android:layout_alignEnd="@+id/TVtue"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:checked="false"
                android:textOff="@string/Off"
                android:textOn="@string/On" />


            //Wednesday

            <TextView
                android:id="@+id/TVwed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tbmon"
                android:layout_alignLeft="@+id/TVmon"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="10dp"
                android:text="Wednesday"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tvpwed"
                android:layout_width="@dimen/Toggle_Button_Width"
                android:layout_height="wrap_content"
                android:layout_below="@+id/TVwed"
                android:layout_alignStart="@+id/TVwed"
                android:gravity="center"
                android:text="In"
                android:textSize="22sp" />

            <ToggleButton
                android:id="@+id/tbwed"
                android:layout_width="@dimen/Toggle_Button_Width"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvpwed"
                android:layout_alignStart="@+id/TVwed"
                android:checked="false"
                android:textOff="@string/Off"
                android:textOn="@string/On" />


            //Thursday

            <TextView
                android:id="@+id/TVthu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/TVwed"
                android:layout_alignEnd="@+id/TVtue"
                android:layout_marginEnd="0dp"
                android:text="Thursday"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tvpthu"
                android:layout_width="@dimen/Toggle_Button_Width"
                android:layout_height="wrap_content"
                android:layout_below="@+id/TVthu"
                android:layout_alignEnd="@+id/TVtue"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:gravity="center"
                android:text="In"
                android:textSize="22sp" />

            <ToggleButton
                android:id="@+id/tbthu"
                android:layout_width="@dimen/Toggle_Button_Width"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvpthu"
                android:layout_alignEnd="@+id/TVtue"
                android:layout_marginEnd="0dp"
                android:checked="false"
                android:textOff="@string/Off"
                android:textOn="@string/On" />

            //Friday

            <TextView
                android:id="@+id/TVfri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tbwed"
                android:layout_alignLeft="@+id/TVwed"
                android:layout_marginTop="10dp"
                android:text="Friday"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tvpfri"
                android:layout_width="@dimen/Toggle_Button_Width"
                android:layout_height="wrap_content"
                android:layout_below="@+id/TVfri"
                android:layout_alignStart="@+id/TVfri"
                android:gravity="center"
                android:text="In"
                android:textSize="22sp" />

            <ToggleButton
                android:id="@+id/tbfri"
                android:layout_width="@dimen/Toggle_Button_Width"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvpfri"
                android:layout_alignStart="@+id/TVfri"
                android:layout_marginStart="0dp"
                android:checked="false"
                android:textOff="@string/Off"
                android:textOn="@string/On" />


            //Saturday

            <TextView
                android:id="@+id/TVsat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/TVfri"
                android:layout_alignEnd="@+id/TVtue"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:text="Saturday"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tvpsat"
                android:layout_width="@dimen/Toggle_Button_Width"
                android:layout_height="wrap_content"
                android:layout_below="@+id/TVsat"
                android:layout_alignEnd="@+id/TVtue"
                android:layout_marginEnd="0dp"
                android:gravity="center"
                android:text="In"
                android:textSize="22sp" />

            <ToggleButton
                android:id="@+id/tbsat"
                android:layout_width="@dimen/Toggle_Button_Width"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvpsat"
                android:layout_alignEnd="@+id/TVtue"
                android:layout_marginEnd="0dp"
                android:checked="true"
                android:textOff="@string/Off"
                android:textOn="@string/On" />

            //Sunday

            <TextView
                android:id="@+id/TVsun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tbfri"
                android:layout_alignLeft="@+id/TVmon"
                android:layout_marginTop="0dp"
                android:text="Sunday"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tvpsun"
                android:layout_width="@dimen/Toggle_Button_Width"
                android:layout_height="wrap_content"
                android:layout_below="@+id/TVsun"
                android:layout_alignStart="@+id/TVsun"
                android:gravity="center"
                android:text="In"
                android:textSize="22sp" />

            <ToggleButton
                android:id="@+id/tbsun"
                android:layout_width="@dimen/Toggle_Button_Width"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvpsun"
                android:layout_alignStart="@+id/TVsun"
                android:checked="false"
                android:textOff="@string/Off"
                android:textOn="@string/On" />


        </RelativeLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        tools:visibility="gone" />
</RelativeLayout>